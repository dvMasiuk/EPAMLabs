@model SystemSales.Presentation.Models.ChartViewModel

@{
    ViewBag.Title = "Chart";
}

<h2>Chart</h2>

@{
    new Chart(width: Model.Width, height: Model.Height)
        .AddTitle(Model.Title)
        .AddLegend()
        .AddSeries(
        name: Model.NameSeries,
            xValue: Model.XValues,
            yValues: Model.YValues)
        .Write();
}

